package selfProgramming;

public class DataConversion {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int dollars = 20;
		double money = dollars;
		
		System.out.println("The price of this goods is " + dollars);
		System.out.println("The price of this goods is " + money);
		
		int oneBillion = 1000000000;
		//short oneHundredMillion = oneBillion; 
		//error occurs, cannot convert from int to short in assignment conversion (narrowing)
		
		System.out.println("The sum is " + oneBillion);
		//System.out.println("The sum is " + oneHundredMillion);
		System.out.println();
		
		int count = 12;
		double sum = 490.27;
		double result;
		
		result = sum/ count;
		
		System.out.printf("The result is equal to " + "%.2f",result);
		System.out.println();
		System.out.println();
		
		int total = 50;
		float answer = (float) total/ 6;
		float secondAnswer =  total/ 6; // without cast, the answer in fraction part will lost
		
		System.out.println("The answer is " + answer);
		System.out.println("The second answer is " + secondAnswer); // without cast, the answer in fraction part will lost
		
		
	}

}
